{
  "name": "mshack-mobile",
  "version": "1.0.0",
  "description": "Mobile weather app with secret audio recording feature",
  "private": true,
  "workspaces": [
    "weather-app",
    "server"
  ],
  "scripts": {
    "start": "cd weather-app && npm start",
    "android": "cd weather-app && npm run android",
    "ios": "cd weather-app && npm run ios",
    "web": "cd weather-app && npm run web",
    "server": "cd server && npm start",
    "dev": "concurrently \"npm run server\" \"npm run start\"",
    "install:all": "npm install && cd weather-app && npm install && cd ../server && npm install",
    "build": "cd weather-app && npm run build",
    "test": "cd weather-app && npm test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/mshack-mobile.git"
  },
  "keywords": [
    "react-native",
    "expo",
    "weather",
    "audio-recording",
    "mobile-app"
  ],
  "author": "Your Name",
  "license": "MIT"
}
